
/* BUTTON - Controls all button widgets. */
.button
    @extends GtkWidget;

    background-image:               gradient(gloss-color(lighter, faded), gloss-color(darker, faded));
    bevel:                          1px inset;
    border-radius:                  5px;
    box-shadow:                     inset 0px 0px 2px shadow-color(normal, semifaded);
    padding:                        10px;

    &:checked
        background-image:           gradient(shade(SelectionColor, darker), shade(SelectionColor, lighter));
        button-text-color:          SelectionTextColor;
        box-shadow:                 inset 1px 2px 3px shadow-color(normal);

        &:backdrop, &:hover, &:prelight
            background-image:       gradient(shade(HighlightColor, darker), shade(HighlightColor, lighter));
            button-text-color:      SelectionTextColor;
            color:                  HighlightTextColor;

    &.flat,
    .primary-toolbar &
        @extends GtkWidget;
        border-radius:              2.5px;
        &:hover, &:prelight
            background-color:       HighlightColor;
            background-image:       none;

    &:focus
        button-text-color:          SelectionColor;

    &:hover, &:prelight
        background-image:           gradient(shade(HighlightColor, lighter), shade(HighlightColor, darker));
        button-text-color:          HighlightTextColor;

    &.spinbutton
        @extends GtkWidget;
        border-width:               0px 0px 0px 0.25px;
        box-shadow:                 none;

        &:hover
            button-text-color:      SelectionColor;
        &:last-child
            border-radius:          0px 20px 20px 0px;

    .linked &
        border-radius:              0px;
        border-left-width:          0.25px;
        border-right-width:         0.25px;

        &:first-child,
        &:active:first-child,
        &:backdrop:first-child,
        &:insensitive:first-child,
        &:active:backdrop:first-child
            border-radius:          5px 0px 0px 5px;
            border-right-width:     0.25px;
        &:last-child
            border-radius:          0px 5px 5px 0px;
            border-left-width:      0.25px;
        &:only-child
            border-radius:          5px;
            border-width:           1px;



column-header
    .button
        @extends .button.flat
        background-color:   gloss-color(lighter, faded);
        background-clip:    padding-box;
        border-radius:      0px
        border: none;

    &:first-child .button
        border-radius:      2.5px 0px 0px 0px;
    &:last-child .button
        border-radius:      0px 2.5px 0px 0px;
