    }
}

style "ComboBox" = "Dark"
{
    xthickness = 4
    ythickness = 4

    engine "pixmap"
    {
        image
        {
            function        = BOX
            state           = NORMAL
            file            = "img/Trough-Square.svg"
            border          = { 15, 15, 15, 15 }
            stretch         = TRUE
        }
        image
        {
            function        = BOX
            state           = INSENSITIVE
            file            = "img/Trough-Square.svg"
            border          = { 15, 15, 15, 15 }
            stretch         = TRUE
        }
        image
        {
            function        = BOX
            state           = PRELIGHT
            file            = "img/Trough-Square-Highlighted.svg"
            border          = { 15, 15, 15, 15 }
            stretch         = TRUE
        }
    }
}

