WindowLightGloss = gloss-color(lighter, semitransparent);
WindowDarkGloss = shadow-color(lighter, semitransparent);



/* UNITYDECORATION - Governs the server-side window decorations generated by Unity. */
UnityDecoration
    -UnityDecoration-extents: 					30px 5px 5px 5px;
    -UnityDecoration-input-extents: 			10px;

    -UnityDecoration-shadow-offset-x: 			2.5px;
    -UnityDecoration-shadow-offset-y: 			2.5px;
    -UnityDecoration-active-shadow-color: 		ShadowColor;
    -UnityDecoration-active-shadow-radius: 		10px;
    -UnityDecoration-inactive-shadow-color: 	ShadowColor;
    -UnityDecoration-inactive-shadow-radius: 	10px;

    -UnityDecoration-glow-size: 				25px;
    -UnityDecoration-glow-color: 				SelectionColor;

    -UnityDecoration-title-indent: 				10px;
    -UnityDecoration-title-fade: 				0px;
    -UnityDecoration-title-alignment: 			0.0;

    background-clip:        border-box;
    background-color:       UnityDecoratorColor;
    background-image:       none;
    border:                 none;
    border-radius:          0em;
    color:                  UnityDecoratorTextColor;


    &:backdrop
        background-color:   UnityDecoratorColorDim;
        color:              UnityDecoratorTextColorDim;

    &.bottom
        border-bottom:      1px solid WindowDarkGloss;
        border-left:        1px solid WindowLightGloss;
        border-radius:      0em 0em 0.5em 0.5em;
        border-right:       1px solid WindowDarkGloss;

    &.left
        border-left:        1px solid WindowLightGloss;

    &.right
        border-right:       1px solid WindowDarkGloss;

    &.top
        border-left:        1px solid WindowLightGloss;
        border-radius:      0.5em 0.5em 0em 0em;
        border-right:       1px solid WindowDarkGloss;
        border-top:         1px solid WindowLightGloss;

        padding:            0.5em;
        .button
            debug();

/* UNITY-PANEL - Governs the Unity menu bar that exists at the top of the screen. */
.unity-panel
    background-color:       UnityPanelColor;
    border:                 none;
    color:                  UnityPanelTextColor;

    &.panel-title
        color:          transparent;
