.modal-dialog

    background-color:               Red;
    border-image:                   url("Stylus/Icons/Modal.svg") 8 8 8 8 / 8px 8px 8px 8px;
    border-radius:                  0.5em;
    box-shadow:                     1px 1px 8px shadow-color(normal, semifaded);

    .modal-dialog-linked-button
        background-color:           WindowColorLight;
        border-radius:              2em;
        box-shadow:                 inset 0px 0px 2px shadow-color(darker, faded);
        box-shadow:                 0px 0px 2px shadow-color(darker, faded);
        margin:                     0.5em 1em;

.message-list

    .message-list-clear-button
        border-radius:              2em;
        background-color:           WindowColorDimmer;
        border-color:               alpha(WindowColor, 0.125);
        box-shadow:                 1px 1px 3px shadow-color(normal, faded);

        &:hover
            background-color:       WindowColor;

    .message

        border-radius:              0.125em;
        border:                     1px solid transparent;

        &:hover
            deep-inset();
            background-color:       alpha(HighlightColor, 0.25);
            border-radius:          0.25em;
            color:                  TextColorHighlighted;




