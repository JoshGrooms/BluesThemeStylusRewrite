StEntry
    deep-inset();
    border-radius:                      2em;
    padding:                            0.25em 0.5em;

    #overview &
        background-color:               MenuColor;

.switcher-arrow

    &:highlighted
        color:                          SelectionColor;

.switcher-list

    -boxpointer-gap:                    64px;
    background-color:                   MenuColor;
    // border:                             2px solid alpha(WindowColor, 0.125);
    border-image:                       url("Stylus/Icons/Menu.svg") 8 8 8 8 / 8px 8px 8px 8px;
    border-radius:                      0.5em;
    // box-shadow:                         1px 2px 8px shadow-color(normal, semifaded);
    // box-shadow:                         1px 1px 1px Black;

    .item-box,
    .thumbnail-box
        background-color:               transparent;
        border:                         none;

        &:selected
            deep-inset();
            background-color:           SelectionColor;
            color:                      TextColorSelected;

        &:outlined
            deep-inset();
            background-color:           LightGray;
            color:                      TextColor;

        StIcon
            icon-shadow:                0px 0px 5px Black;


