/* STYLES */
border-bevel(size, direction, color)

    border:                             0px solid color;
    if (direction == outset)
        border-top-width:               size;
        border-left-width:              size;
    else
        border-bottom-width:            size;
        border-right-width:             size;

/// @brief Configures a border image for a HTML element that resembles an inset separation line.
separator(position = bottom)

    if (position == bottom || position == top)  { source = url("Icons/Separator-Horizontal.svg"); }
    else                                        { source = url("Icons/Separator-Vertical.svg"); }

    if (position == bottom)
        size    = 0px 0px 2px 0px;
        slice   = 0 0 2 0;
    else if (position == left)
        size    = 0px 0px 0px 2px;
        slice   = 0 0 0 2;
    else if (position == right)
        size    = 0px 2px 0px 0px;
        slice   = 0 2 0 0;
    else
        size    = 2px 0px 0px 0px;
        slice   = 2 0 0 0;

    border-image:                       source slice / size repeat;
    border-width:                       size;

