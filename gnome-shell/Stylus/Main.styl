.switcher-list

    background-color:   MenuColor;
    background-gradient-direction:  none;
    background-image:   none;
    border:             2px solid alpha(WindowColor, 0.125);
    border-radius:      0.5em;
    box-shadow:         1px 2px 3px shadow-color(normal, semifaded);

    .item-box,
    .thumbnail-box
        background-color:           transparent;
        border:                     none;

        &:selected
            deeper-inset();
            background-color:       SelectionColor;

        &:outlined
            deep-inset();
            background-color:       LightGray;

        StIcon
            icon-shadow:    0px 0px 5px Black;


