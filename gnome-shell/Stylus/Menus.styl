.popup-menu

    min-height:                 32px;

    &.panel-menu

        -boxpointer-gap:            2px;

        // background-color:           MenuColor;
        border-image:               url("Stylus/Icons/Menu.svg") 8 8 8 8 / 8px 8px 8px 8px;
        // box-shadow:                 1px 2px 3px shadow-color(normal, semifaded);
        padding:                    0px;
        // margin:                     0em;

        .popup-menu-content
            flat();
            padding:                4px 2px;

    .popup-menu-content
        // background-color:           MenuColor;
        // border-color:               Red;
        border-image:               url("Stylus/Icons/Menu.svg") 8 8 8 8 / 8px 8px 8px 8px;
        // background-image:           url("Stylus/Icons/Menu.svg");
        // background-size:            cover;
        // background-repeat:          repeat;
        border-radius:              0.5em;
        // box-shadow:                 1px 2px 3px shadow-color(normal, semifaded);
        // box-shadow:                 1px 2px 3px Black;
        padding:                    4px;

    .popup-menu-item

        color:                      TextColor;

        &:active,
        &:checked
            shallow-inset();
            background-color:       alpha(HighlightColor, 0.875);
            border:                 none;
            border-radius:          0.125em 0.125em 0em 0em;
            color:                  TextColorSelected;

            &:hover
                border-radius:      0.125em 0.125em 0em 0em;

        &:hover,
        &.selected
            shallow-inset();
            border:                 none;
            background-color:       alpha(HighlightColor, 0.625);
            border-radius:          0.125em;
            color:                  TextColorHighlighted;

    .popup-sub-menu
        deep-inset();
        background-color:           InsetColor;
        border:                     1px solid alpha(WindowColor, 0.125);
        border-radius:              0em 0em 0.125em 0.125em;
        box-shadow:                 inset 1px 2px 3px shadow-color(normal, semifaded);

        .popup-menu-item
            border:                 2px solid transparent;
            &:hover
                border-color:       MenuColor;
                border-radius:      0.125em;
                box-shadow:         none;

