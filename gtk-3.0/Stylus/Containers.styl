/* OVERSHOOT - Governs decorations drawn on the sides of GtkScrolledWindow controls when attempting to scroll too far. */
.overshoot,
.undershoot
    flat();

/* POPUP - Controls the base windows used for context, drop-down, and combo-box menus.
 *
 *      NOTES:
 *          - 'margin' and 'padding' settings have no effect on this class.
 */
.popup,
.popup.background,
popover.background

    deep-outset();

    background-color:       alpha(MenuColor, 0.99);
    border-radius:          0.75em;
    color:                  MenuTextColor;

    border-right:           1px solid #232323;
    border-bottom:          1px solid #232323;

    label
        padding:            0.5em;

dialog.background

    deep-outset();
    background-color:       alpha(MenuColor, 0.99);
    background-image:       none;
    border-radius:          0em 0em 0.75em 0.75em;
    border-top:             none;

    headerbar.titlebar
        deep-outset();
        background-color:   inherit;
        border-bottom:      none;


