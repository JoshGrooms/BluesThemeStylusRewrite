/* CONTAINERS - Styles for top-level container widgets used in applications. */



.background,
GtkApplicationWindow,
GtkWindow
    -GtkWindow-decoration-button-layout:    "close:";
    -GtkWindow-resize-handle:               5;

    background-color:       WindowColor;
    background-clip:        border-box;
    background-image:       none;

    &:backdrop
        background-color:   WindowColorDim;



/* CSD - Controls windows that undergo decoration on the client side. */
.csd
    @extends .background

    /* WINDOW-FRAME - Controls the outer window frame of applications decorated on the client side. */
    &.window-frame,
    &.window-frame:backdrop
        background-clip:    border-box;
        bevel:              1px outset;
        border-radius:      0.5em;
        box-shadow:         0.25em 0.25em 0.5em shadow-color(normal, semifaded);

    &.background
        bevel:              1px outset;
        border-radius:      0em 0em 0.5em 0.5em;
        border-top:         none;

    .titlebar.header-bar
        padding:            0.75em 0.75em 0px 0.75em;

.solid-csd
    @extends .background

    /* WINDOW-FRAME - Controls the outer window frame of applications decorated on the client side. */
    &.window-frame,
    &.window-frame:backdrop
        bevel:              1px outset;
        border-radius:      0.5em;
        box-shadow:         none;
        margin:             0em 0.25em 0.25em 0.25em;

.dnd
    border: 1px solid SelectionColor;

/* OVERSHOOT - Governs decorations drawn on the sides of GtkScrolledWindow controls when attempting to scroll too far. */
.overshoot,
.undershoot
    flat();

/* POPUP - Controls the base windows used for context, drop-down, and combo-box menus.
 *
 *      NOTES:
 *          - 'margin' and 'padding' settings have no effect on this class.
 */
.popup,
.popup.background
    deep-outset();
    background-color:       MenuColor;
    border-radius:          0.5em;
    color:                  MenuTextColor;

    border-right:           1px solid #232323;
    border-bottom:          1px solid #232323;




/* POPOVER - Governs windows that behave similarly to 'popup' instances.
 *
 *      So far, I've only seen these used in CSD-type windows.
 */
.popover,
.popover.background
    bevel:                  1px outset shade(MenuColor, light) LightBlack;
    background-clip:        border-box;
    background-color:       MenuColor;
    border-radius:          0.5em;
    color:                  MenuTextColor;

/* TOOLTIP - Controls the appearance of tooltip messages. */
.tooltip,
.tooltip.background
    @extends .popup
