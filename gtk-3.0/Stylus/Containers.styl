/* CONTAINERS - Styles for top-level container widgets used in applications. */



.background,
.csd,
.window,
GtkApplicationWindow,
GtkWindow
    -GtkWindow-resize-handle:               5;

    background-color:       alpha(WindowColor, 0.99);
    background-clip:        border-box;
    background-image:       none;
    border-radius:          0em 0em 0.5em 0.5em;

    .titlebar,
    headerbar
        background-color:   inherit;
        border-radius:      0.5em 0.5em 0em 0em;
        padding:            0.25em;

    &:backdrop
        background-color:   alpha(WindowColorDim, 0.999);





