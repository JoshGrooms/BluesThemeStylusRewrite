// Governs the buttons at the top of each list-view-like element (e.g. e-mail)
ECanvas button
    @extends button.flat;
    color: TextColorDark;
    &:backdrop
        color:  TextColorDark;

/* ECALENDAR - Governs the calendar control widget found within the program 'Evolution'. */
ECalendar
    background-image: none;
    background-color: InsetColor;

    button
        @extends button.flat;
        border-radius: 0.125em;
        GtkArrow
            color: TextColor;
        &:hover GtkArrow
            color: TextColorHighlighted;



/** GNOME TERMINAL **/
TerminalScreen
    background-color:   WindowColorDark;
    color:              VibrantBlue;



/** NAUTILUS **/
NautilusWindow
    GtkPaned
        -GtkPaned-handle-size:      2;

    .nautilus-canvas-item
        border-radius:              0.5em;
        &:active                    { background-color: Orchid; }
        &:prelight, &:selected
            background-color:       alpha(SelectionColor, 0.75);
            color:                  TextColorSelected;

            &:backdrop
                background-color:   alpha(SelectionColorBackground, 0.75);

        &.nautilus-desktop, &.nautilus-desktop:backdrop
            color:                  White;



/** UBUNTU SOFTWARE CENTER **/
GtkWindow .section-sel-bg button.flat

    &:checked
        background-image: gradient(WindowColor, WindowColor);

        .symbolic-icon, GtkLabel
            color:              SelectionColor;
            font-weight:        bold;

        &:backdrop
            background-image: gradient(WindowColorDim, WindowColorDim);
            .symbolic-icon, GtkLabel
                color:          HighlightColor;
