/* GTKENTRY - Governs all single-line text entry bars. */
entry

    deep-inset();

    border-radius:          2em;
    color:                  TextColor;
    padding:                0.375em 0.75em 0.375em 0.75em;
    text-shadow:            none;

    &:backdrop              { color: TextColorDim; }
    selection
        background-color:   HighlightColor;
        color:              TextColorHighlighted;

    progress
        // background-color:   ProgressBarColor;
        background-clip:    border-box;
        background-image:   SelectionGradientVertical;
        background-size:    cover;
        border-radius:      2em;
        margin:             0em;
        padding:            0em;
        &:backdrop          { background-color: ProgressBarColorDim; }

    // Occasionally these are linked to other controls, such as buttons.
    .linked &
        &:first-child
            border-radius:  2em 0em 0em 2em;
            padding-right:  0.25em;
        &:last-child
            border-radius:  0em 2em 2em 0em;
            padding-left:   0.25em;

    /* IMAGE - Governs any icons that appear inside of a text entry control. */
    image.left
        padding-left:       0em;
        padding-right:      0.25em;
    image.right
        padding-left:       0.25em;
        padding-right:      0em;



