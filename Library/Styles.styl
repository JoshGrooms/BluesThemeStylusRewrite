shallow-inset()
    bevel:              1px inset normal;
    background-color:   shadow-color(normal, faded);
    box-shadow:         inset 1px 2px 3px shadow-color();

deep-inset()
    bevel:              1px inset normal;
    background-color:   shadow-color(light, semifaded);
    shadow:             10px inset normal normal;

shadow(size, direction = outset, strength = normal, opacity = normal)
    box-shadow:         direction size size size (- size) shadow-color(strength, opacity);

shallow-outset()
    bevel:              1px outset darker faded;
    background-color:   shade(Black, lighter);
    box-shadow:         0px 0px 0px 1px shadow-color(lighter, semiopaque),
                        3px 3px 5px shadow-color();

button-outset()
    bevel:              1px inset normal;
    background-image:   gradient(gloss-color(lighter, faded), gloss-color(darker, faded));
    box-shadow:         inset 0px 0px 2px shadow-color(normal, semifaded);

button-text-color(c)
    & GtkBox GtkImage,
    & GtkBox GtkLabel,
    > GtkImage,
    > GtkLabel
        color:          c;



/* BEVEL - Sets border parameters to resemble an inset or outset bevel.
 *
 *  SYNTAX:
 *      bevel(size)
 *      bevel(size, direction)
 *      bevel(size, direction, strength)
 *      bevel(size, direction, strength, opacity)
 *      bevel(size, direction, topLeftColor, bottomRightColor)
 *
 *  INPUTS
 *      size:
 *
 *  OPTIONAL INPUTS:
 *      direction:          OPTION
 *
 *      strength:           OPTION
 *
 *      opacity:            OPTION
 *
 *      topLeftColor:       RGBA
 *
 *      bottomRightColor:   RGBA
 */
bevel(size, direction = outset, strength = normal, opacity = semitransparent)
    if (iscolor(strength))
        c1 = strength;
        c2 = opacity;
    else if (direction == inset)
        c1 = shadow-color(strength, opacity);
        c2 = gloss-color(strength, opacity);
    else
        c1 = gloss-color(strength, opacity);
        c2 = shadow-color(strength, opacity);

    background-clip:        (direction == inset) ? padding-box : border-box;
    border-color:           c1;
    border-bottom-color:    c2;
    border-right-color:     c2;
    border-style:           solid;
    border-width:           size;
