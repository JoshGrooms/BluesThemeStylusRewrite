.menu,
GtkMenu,
GtkMenu.menu
    -GtkMenu-horizontal-offset: -1;
    flat();
    color:      MenuTextColor;
    padding:    0.125em;


.menuitem,
GtkImageMenuItem
    -GtkMenuItem-arrow-scaling:     0.6;

    border-radius:                  0.25em;
    color:                          TextColor;
    padding:                        1em;

    &:hover
        background-image:           SelectionGradientVertical;
        color:                      TextColorSelected;

        > GtkLabel,
        > GtkImage,
        > * > GtkLabel,
        > * > GtkImage,
        > * > * > GtkLabel
        > * > * > GtkImage
            color: TextColorSelected;

    // Governs inactive menu items that cannot be selected.
    &:insensitive,
    &:insensitive .accelerator,
    &:insensitive GtkLabel
        color:                      TextColorDisabled;

    // Governs the very first menu items, which is what is displayed on menu bars.
    .menubar > &,
    GtkMenuBar > &,
    GtkMenuBar.menubar > &
        border-radius:              0.25em;
        color:                      TextColorLight;
        padding:                    0.25em 0.5em;
        text-shadow:                none;

        &:backdrop
            color:                  TextColorDim;
        &:hover
            background-image:       HighlightGradientVertical;
            color:                  TextColorHighlighted;

    /* GTKACCELLABEL - Governs the text description of each individual menu item.
     *
     *      Although its name would suggest differently, this class does NOT control the accelerators found adjacent to some
     *      menu items.
     */
    // GtkAccelLabel   { color: MenuTextColor; }
    /* ACCELERATOR - Governs the shortcut text found adjacent to certain individual menu items. */
    .accelerator    { color: MenuAcceleratorColor; }
